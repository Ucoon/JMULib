<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/book_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/example"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/book_bg"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图解CSS3"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核心技术与案例实战"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="3dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/rawValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.06.12应还"
                    android:textSize="10sp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/renewable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="续借"
                    android:textSize="8sp"
                    android:textColor="@color/white"
                    android:background="@drawable/list_text_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/outTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还剩39天"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/text_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

</LinearLayout>