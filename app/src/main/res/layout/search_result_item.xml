<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/search_book_bg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/example"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/search_book_bg"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/search_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图解CSS3"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/author"/>
                        <TextView
                            android:id="@+id/search_book_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大漠"
                            android:maxLength="8"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                    <!--<LinearLayout-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:gravity="center">-->
                        <!--<ImageView-->
                            <!--android:layout_width="15dp"-->
                            <!--android:layout_height="15dp"-->
                            <!--android:src="@drawable/book"/>-->
                        <!--<TextView-->
                            <!--android:id="@+id/book_location"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="嘉庚图书馆"-->
                            <!--android:singleLine="true"-->
                            <!--android:textSize="10sp"-->
                            <!--android:layout_marginLeft="3dp"-->
                            <!--android:textColor="@color/gray"/>-->
                    <!--</LinearLayout>-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/callnumber"/>
                        <TextView
                            android:id="@+id/book_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总本数："
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:id="@+id/book_num_many"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/book_number"/>
                        <TextView
                            android:id="@+id/book_callnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可借："
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:id="@+id/book_callnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/book"/>
                        <TextView
                            android:id="@+id/book_publisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="机械工业出版社"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/number"/>
                        <TextView
                            android:id="@+id/book_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O413.1/TN9(2)"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>